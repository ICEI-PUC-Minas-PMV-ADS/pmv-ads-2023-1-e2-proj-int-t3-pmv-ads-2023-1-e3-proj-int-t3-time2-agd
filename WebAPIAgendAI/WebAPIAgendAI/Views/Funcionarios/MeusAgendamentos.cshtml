@model WebAPIAgendAI.Models.Funcionario

@{ ViewData["Title"] = "Meus Agendamentos"; }

<h2>Funcionario: @Model.Nome</h2>

<div>
    <h4>Meus Agendamentos</h4>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Data
                </th>
                <th>
                    Quantidade
                </th>
                <th>
                    Sala
                </th>
                <th>
                    Tipo
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Agendamentos.OrderByDescending(c => c.Data))
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Data)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sala)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo)
                </td>
                
            </tr>
}
        </tbody>
    </table>
</div>