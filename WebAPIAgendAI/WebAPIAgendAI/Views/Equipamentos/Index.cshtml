@model IEnumerable<WebAPIAgendAI.Models.Equipamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Equipamentos Cadastrados</h1>

<p>
    <a asp-action="Create">Cadastrar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HostName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HostName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NumeroSerie">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.NumeroSerie">Informações</a> |
                <a asp-action="Delete" asp-route-id="@item.NumeroSerie">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
